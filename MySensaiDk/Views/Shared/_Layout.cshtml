<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/css/style.css" />
    <link rel="stylesheet" href="~/Content/css/griddy.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container body-content grid-container addBorder">
        <header>
            <div class="row headerColor">
                <div class="col-lg-1 col-md-1 col-sm-0 col-xs-0"></div>
                <a href='@Url.Action("Index", "Home" )'>
                    <div class="col-lg-2 col-md-2 col-sm-0 col-xs-0">
                        <h1 id="logoHeading" class="floatLeft"><strong><span class="orangeColor">MY</span><span class="secondColor">SENSEI</span></strong></h1>
                    </div>
                </a>
                <div class="col-lg-3 col-md-3 col-sm-4 col-xs-4">
                    <a href='@Url.Action("Index", "Home" )'>
                        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 noPadding hideText xsMdMenu"><i class="material-icons">home</i></div>
                    </a>
                </div>
                <nav>
                    <div class="col-lg-5 col-md-6 col-sm-8 col-xs-8">
                        @Html.Partial("_LoginPartial")
                    </div>
                </nav>
                <div class="col-lg-1 col-md-1 col-sm-0 col-xs-0 floatRight"></div>
            </div>
        </header>
        <main>
            @RenderBody()
        </main>

        <footer class="">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-0 col-xs-0"></div>
                <div class="col-lg-12 col-md-12 col-sm-0 col-xs-0 headerColor">
                    <div class="col-lg-1 col-md-1 col-sm-0 col-xs-0"></div>
                    <div class="col-lg-4 col-md-4 col-sm-0 col-xs-0 textLeftAlign fontColorBlack">Holm & Bæk - &copy; @DateTime.Now.Year</div>
                    <div class="col-lg-6 col-md-6 col-sm-0 col-xs-0 textRightAlign fontColorBlack">Vestre Ringgade 34 1 sal, 8000 Århus C, Tlf.: 2894 3129, Cvr nr.:36779896</div>
                    <div class="col-lg-1 col-md-1 col-sm-0 col-xs-0"></div>
                </div>
            </div>
        </footer>
    </div>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCO4Aq5jJ27okisJBNtJ0IuJg-oey9t-U4"></script>
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4.custom/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4.custom/datepicker-da.js"></script>
    <script src="~/Content/js/script.js"></script>
</body>
</html>
