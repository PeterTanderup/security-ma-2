@using MySensaiDk.Models
@model MySensaiDk.Models.EditUserDetails

@{
    ViewBag.Title = "Rediger profil";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <h2 class="col-lg-12 col-md-12 col-sm-12 col-xs-12 fontColorBlack">Rediger Profil</h2>

        <div class="col-lg-3 col-md-3 col-sm-0 col-xs-0"></div>

        <div class="addBorder col-lg-6 col-md-6 col-sm-12 col-xs-12">
            @Html.ValidationSummary(true)

            @Html.ValidationMessageFor(model => model.Email)
            <div class="row">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-lg-6 col-md-6 col-sm-12 col-xs-12 fontColorBlack textRightAlign required" })
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 textLeftAlign">
                    @Html.EditorFor(model => model.Email)
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.FirstName)
            <div class="row">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "col-lg-6 col-md-6 col-sm-12 col-xs-12 fontColorBlack textRightAlign required" })
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 textLeftAlign">
                    @Html.EditorFor(model => model.FirstName)
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.LastName)
            <div class="row">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "col-lg-6 col-md-6 col-sm-12 col-xs-12 fontColorBlack textRightAlign required" })
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 textLeftAlign">
                    @Html.EditorFor(model => model.LastName)
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Gender)
            <div class="row">
                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "col-lg-6 col-md-6 col-sm-12 col-xs-12 fontColorBlack textRightAlign required" })
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 textLeftAlign">
                    @Html.DropDownListFor(x => x.Gender, new SelectList(Enum.GetNames(typeof(Gender))))
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Birthday)
            <div class="row">
                @Html.LabelFor(model => model.Birthday, htmlAttributes: new { @class = "col-lg-6 col-md-6 col-sm-12 col-xs-12 fontColorBlack textRightAlign required" })
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 textLeftAlign">
                    @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "birthday" } })
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.PhoneNumber)
            <div class="row">
                @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "col-lg-6 col-md-6 col-sm-12 col-xs-12 fontColorBlack textRightAlign" })
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 textLeftAlign">
                    @Html.EditorFor(model => model.PhoneNumber)
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Password)
            <div class="row">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-lg-6 col-md-6 col-sm-12 col-xs-12 fontColorBlack textRightAlign required" })
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 textLeftAlign">
                    @Html.EditorFor(model => model.Password)
                    @Html.ActionLink("rediger", "EditPassword","User")
                </div>
            </div>

            <a href='@Url.Action("Index", "User" )'>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 textRightAlign">
                    <input type="button" value="Fortryd" class="customBtn" />
                </div>
            </a>

            <div class="row col-lg-6 col-md-6 col-sm-12 col-xs-12 textLeftAlign">
                <input type="submit" value="Opdater Profil" class="customBtn" />
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-0 col-xs-0"></div>
    </div>
}


