@model MySensaiDk.Models.LoginModel
@{ ViewBag.Title = "Login";}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <div class="row">
        <h2 class="fontColorBlack col-lg-12 col-md-12 col-sm-12 col-xs-12">Log In</h2>

        <div class="col-lg-4 col-md-4 col-sm-0 col-xs-0"></div>
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 addBorder">
            
            @Html.ValidationSummary(true)   
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            @Html.ValidationMessageFor(model => model.Email)
            <div class="row">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-lg-4 col-md-4 col-sm-12 col-xs-12 fontColorBlack textRightAlign required" })
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    @Html.EditorFor(model => model.Email)
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Password)
            <div class="row">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-lg-4 col-md-4 col-sm-12 col-xs-12 fontColorBlack textRightAlign required" })
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    @Html.EditorFor(model => model.Password)
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <input type="submit" name="login" value="Log Ind" class="customBtn" />
            </div>
            <div class="row">
                <br />
                <p class="fontColorBlack">Har du ikke en konto så få en <a href='@Url.Action("Register", "Account")'>her</a> </p>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-0 col-xs-0"></div>
    </div>
}


